<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - SIMS</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/sims/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <partial name="Partials/_Navbar" />
    <div id="layoutSidenav">
        <partial name="Partials/_Sidebar" />
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">
                        @ViewData["breadcrumb"]
                    </h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">
                            @ViewData["breadcrumb-item"]
                        </li>
                    </ol>
                    @RenderBody()
                </div>
            </main>
            <partial name="Partials/_Footer" />
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/sims/js/scripts.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('navbarSearchInput');
            const searchResults = document.getElementById('searchResults');
            const searchResultsContent = document.getElementById('searchResultsContent');
            const searchButton = document.getElementById('btnNavbarSearch');

            if (!searchInput || !searchResults || !searchResultsContent || !searchButton) {
                console.error('Search elements not found');
                return;
            }

            async function performSearch(query) {
                if (!query || query.trim().length < 2) {
                    searchResults.style.display = 'none';
                    return;
                }

                try {
                    const response = await fetch(`/Search/Search?query=${encodeURIComponent(query)}`);
                    const data = await response.json();
                    displaySearchResults(data);
                } catch (error) {
                    console.error('Search error:', error);
                    searchResults.style.display = 'none';
                }
            }

            function displaySearchResults(data) {
                if ((!data.courses || data.courses.length === 0) && (!data.students || data.students.length === 0)) {
                    searchResultsContent.innerHTML = '<div class="p-3 text-muted">No results found</div>';
                    searchResults.style.display = 'block';
                    return;
                }

                let html = '';

                if (data.courses && data.courses.length > 0) {
                    html += '<div class="p-2 border-bottom bg-light"><strong class="text-primary"><i class="fas fa-book"></i> Courses</strong></div>';
                    data.courses.forEach(course => {
                        html += '<a href="/Course/Details/' + course.id + '" class="list-group-item list-group-item-action p-2"><div class="d-flex w-100 justify-content-between align-items-center"><div><h6 class="mb-0">' + escapeHtml(course.code) + '</h6><small class="text-muted">' + escapeHtml(course.name) + '</small></div><i class="fas fa-chevron-right text-muted"></i></div></a>';
                    });
                }

                if (data.students && data.students.length > 0) {
                    html += '<div class="p-2 border-bottom bg-light"><strong class="text-success"><i class="fas fa-user-graduate"></i> Students</strong></div>';
                    data.students.forEach(student => {
                        const studentIdDisplay = student.studentId ? ' (' + escapeHtml(student.studentId) + ')' : '';
                        html += '<a href="/Student/Details/' + student.id + '" class="list-group-item list-group-item-action p-2"><div class="d-flex w-100 justify-content-between align-items-center"><div><h6 class="mb-0">' + escapeHtml(student.studentCode) + studentIdDisplay + '</h6><small class="text-muted">' + escapeHtml(student.fullName) + '</small></div><i class="fas fa-chevron-right text-muted"></i></div></a>';
                    });
                }

                searchResultsContent.innerHTML = html;
                searchResults.style.display = 'block';
            }

            function escapeHtml(text) {
                const map = { '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;' };
                return String(text).replace(/[&<>"']/g, m => map[m]);
            }

            searchInput.addEventListener('input', function() {
                const query = this.value.trim();
                if (query.length >= 2) {
                    performSearch(query);
                } else {
                    searchResults.style.display = 'none';
                }
            });

            searchButton.addEventListener('click', function() {
                const query = searchInput.value.trim();
                if (query.length >= 2) {
                    window.location.href = `/Search/Results?query=${encodeURIComponent(query)}`;
                }
            });

            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const query = this.value.trim();
                    if (query.length >= 2) {
                        window.location.href = `/Search/Results?query=${encodeURIComponent(query)}`;
                    }
                }
            });

            document.addEventListener('click', function(e) {
                if (!searchInput.contains(e.target) && !searchResults.contains(e.target) && !searchButton.contains(e.target)) {
                    searchResults.style.display = 'none';
                }
            });

            searchInput.addEventListener('focus', function() {
                if (this.value.trim().length >= 2) {
                    performSearch(this.value.trim());
                }
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>