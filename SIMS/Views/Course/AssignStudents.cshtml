@model SIMS.Models.AssignStudentViewModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Assign Students";
    ViewData["breadcrumb"] = "Courses";
    ViewData["breadcrumb-item"] = "Assign Students";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2>Assign Students to Course</h2>
                    <p class="text-muted">@Model.CourseCode - @Model.CourseName</p>
                </div>
                <a href="@Url.Action("Index", "Course")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Courses
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Assign New Student -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user-plus"></i> Assign New Student</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AssignStudents" method="post">
                        <input type="hidden" asp-for="CourseId" />
                        <input type="hidden" asp-for="CourseName" />
                        <input type="hidden" asp-for="CourseCode" />

                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label">Select Student</label>
                            <select asp-for="StudentId" class="form-select" required>
                                <option value="">-- Select a Student --</option>
                                @foreach (var student in Model.AvailableStudents)
                                {
                                    <option value="@student.Id">@student.DisplayName</option>
                                }
                            </select>
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>

                        @if (!Model.AvailableStudents.Any())
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> All students are already enrolled in this course.
                            </div>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-plus"></i> Assign Student
                            </button>
                        }
                    </form>
                </div>
            </div>
        </div>

        <!-- Enrolled Students -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-users"></i> Enrolled Students (@Model.EnrolledStudents.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.EnrolledStudents != null && Model.EnrolledStudents.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Enrollment Date</th>
                                        <th>Grade</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.EnrolledStudents)
                                    {
                                        <tr>
                                            <td>@student.Username</td>
                                            <td>@student.Email</td>
                                            <td>@(student.EnrollmentDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(student.Grade))
                                                {
                                                    <span class="badge bg-info">@student.Grade</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not graded</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @(student.Status == "Enrolled" ? "bg-success" : "bg-secondary")">
                                                    @student.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <!-- Update Grade Button -->
                                                    <button type="button" class="btn btn-sm btn-warning" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#gradeModal_@student.StudentId"
                                                            title="Update Grade">
                                                        <i class="fas fa-edit"></i> Grade
                                                    </button>
                                                    <!-- Remove Button -->
                                                    <form asp-action="RemoveStudent" method="post" style="display: inline;"
                                                          onsubmit="return confirm('Are you sure you want to remove this student from the course?');">
                                                        <input type="hidden" name="courseId" value="@Model.CourseId" />
                                                        <input type="hidden" name="studentId" value="@student.StudentId" />
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Remove">
                                                            <i class="fas fa-trash"></i> Remove
                                                        </button>
                                                    </form>
                                                </div>

                                                <!-- Grade Update Modal -->
                                                <div class="modal fade" id="gradeModal_@student.StudentId" tabindex="-1" aria-labelledby="gradeModalLabel_@student.StudentId" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="gradeModalLabel_@student.StudentId">Update Grade for @student.Username</h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <form asp-action="UpdateGrade" method="post">
                                                                <div class="modal-body">
                                                                    <input type="hidden" name="courseId" value="@Model.CourseId" />
                                                                    <input type="hidden" name="studentId" value="@student.StudentId" />
                                                                    <div class="mb-3">
                                                                        <label for="grade_@student.StudentId" class="form-label">Grade</label>
                                                                        <select name="grade" id="grade_@student.StudentId" class="form-select">
                                                                            <option value="">-- Select Grade --</option>
                                                                            @if (student.Grade == "A+")
                                                                            {
                                                                                <option value="A+" selected>A+</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="A+">A+</option>
                                                                            }
                                                                            @if (student.Grade == "A")
                                                                            {
                                                                                <option value="A" selected>A</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="A">A</option>
                                                                            }
                                                                            @if (student.Grade == "A-")
                                                                            {
                                                                                <option value="A-" selected>A-</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="A-">A-</option>
                                                                            }
                                                                            @if (student.Grade == "B+")
                                                                            {
                                                                                <option value="B+" selected>B+</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="B+">B+</option>
                                                                            }
                                                                            @if (student.Grade == "B")
                                                                            {
                                                                                <option value="B" selected>B</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="B">B</option>
                                                                            }
                                                                            @if (student.Grade == "B-")
                                                                            {
                                                                                <option value="B-" selected>B-</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="B-">B-</option>
                                                                            }
                                                                            @if (student.Grade == "C+")
                                                                            {
                                                                                <option value="C+" selected>C+</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="C+">C+</option>
                                                                            }
                                                                            @if (student.Grade == "C")
                                                                            {
                                                                                <option value="C" selected>C</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="C">C</option>
                                                                            }
                                                                            @if (student.Grade == "C-")
                                                                            {
                                                                                <option value="C-" selected>C-</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="C-">C-</option>
                                                                            }
                                                                            @if (student.Grade == "D+")
                                                                            {
                                                                                <option value="D+" selected>D+</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="D+">D+</option>
                                                                            }
                                                                            @if (student.Grade == "D")
                                                                            {
                                                                                <option value="D" selected>D</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="D">D</option>
                                                                            }
                                                                            @if (student.Grade == "F")
                                                                            {
                                                                                <option value="F" selected>F</option>
                                                                            }
                                                                            else
                                                                            {
                                                                                <option value="F">F</option>
                                                                            }
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-primary">Update Grade</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No students enrolled in this course yet.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

