@model List<SIMS.Models.CourseViewModel>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Course Management";
    ViewData["breadcrumb"] = "Courses";
    ViewData["breadcrumb-item"] = "List of Courses";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Course Management</h2>
                @if (User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Add", "Course")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Course
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Course Code</th>
                                        <th>Course Name</th>
                                        <th>Credits</th>
                                        <th>Department</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model)
                                    {
                                        <tr>
                                            <td>@course.CourseCode</td>
                                            <td>@course.CourseName</td>
                                            <td>@course.Credits</td>
                                            <td>@(course.Department ?? "N/A")</td>
                                            <td>
                                                <span class="badge @(course.Status == "Active" ? "bg-success" : "bg-secondary")">
                                                    @course.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <a href="@Url.Action("AssignStudents", "Course", new { id = course.Id })" 
                                                           class="btn btn-sm btn-info" title="Assign Students">
                                                            <i class="fas fa-users"></i> Students
                                                        </a>
                                                        <a href="@Url.Action("Edit", "Course", new { id = course.Id })" 
                                                           class="btn btn-sm btn-warning" title="Edit">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </a>
                                                        <form asp-action="Delete" asp-controller="Course" method="post" 
                                                              style="display: inline;" 
                                                              onsubmit="return confirm('Are you sure you want to delete this course?');">
                                                            <input type="hidden" name="id" value="@course.Id" />
                                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                                <i class="fas fa-trash"></i> Delete
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">View Only</span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No courses found. 
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="@Url.Action("Add", "Course")">Create your first course</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
