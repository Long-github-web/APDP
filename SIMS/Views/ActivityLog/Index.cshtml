@model IEnumerable<SIMS.SimsDbContext.Entities.ActivityLog>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Activity Log";
    ViewData["breadcrumb"] = "Activity Log";
    ViewData["breadcrumb-item"] = "User Activities";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2><i class="fas fa-history"></i> Activity Log</h2>
            <p class="text-muted">View all system activities and user actions.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>User</th>
                                        <th>Action</th>
                                        <th>Entity Type</th>
                                        <th>Description</th>
                                        <th>IP Address</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in Model)
                                    {
                                        <tr>
                                            <td>@log.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                            <td>
                                                @if (log.User != null)
                                                {
                                                    <span class="badge bg-primary">@log.Username</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@log.Username</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @GetActionBadgeClass(log.Action)">
                                                    @log.Action
                                                </span>
                                            </td>
                                            <td>@log.EntityType</td>
                                            <td>@(log.Description ?? "-")</td>
                                            <td>@(log.IpAddress ?? "-")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No activity logs found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetActionBadgeClass(string action)
    {
        return action switch
        {
            "Login" => "bg-success",
            "Logout" => "bg-secondary",
            "Create" => "bg-primary",
            "Update" => "bg-warning",
            "Delete" => "bg-danger",
            "Assign" => "bg-info",
            _ => "bg-secondary"
        };
    }
}














