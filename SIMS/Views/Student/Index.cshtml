@model List<SIMS.Models.StudentViewModel>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Student Management";
    ViewData["breadcrumb"] = "Students";
    ViewData["breadcrumb-item"] = "List of Students";
}

<div class="container-fluid">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Student Management</h2>
                @if (User.IsInRole("Admin"))
                {
                    <a href="@Url.Action("Add", "Student")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Student
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Student ID</th>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Academic Program</th>
                                        <th>Year</th>
                                        <th>GPA</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td>@student.StudentId</td>
                                            <td>@student.FullName</td>
                                            <td>@(student.Email ?? "N/A")</td>
                                            <td>@(student.Phone ?? "N/A")</td>
                                            <td>@(student.AcademicProgram ?? "N/A")</td>
                                            <td>@(student.Year?.ToString() ?? "N/A")</td>
                                            <td>
                                                @if (student.GPA.HasValue)
                                                {
                                                    <span class="badge bg-info">@student.GPA.Value.ToString("F2")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge @(student.Status == "Active" ? "bg-success" : student.Status == "Graduated" ? "bg-primary" : "bg-secondary")">
                                                    @student.Status
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", "Student", new { id = student.Id })" 
                                                       class="btn btn-sm btn-info" title="View Details">
                                                        <i class="fas fa-eye"></i> Details
                                                    </a>
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <a href="@Url.Action("Edit", "Student", new { id = student.Id })" 
                                                           class="btn btn-sm btn-warning" title="Edit">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </a>
                                                        <form asp-action="Delete" asp-controller="Student" method="post" 
                                                              style="display: inline;" 
                                                              onsubmit="return confirm('Are you sure you want to delete this student?');">
                                                            <input type="hidden" name="id" value="@student.Id" />
                                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                                <i class="fas fa-trash"></i> Delete
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No students found. 
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="@Url.Action("Add", "Student")">Create your first student</a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
