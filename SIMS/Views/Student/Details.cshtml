@model SIMS.Models.StudentViewModel
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Student Details";
    ViewData["breadcrumb"] = "Students";
    ViewData["breadcrumb-item"] = "Student Details";
    var courses = ViewBag.Courses as IEnumerable<SIMS.SimsDbContext.Entities.Course> ?? new List<SIMS.SimsDbContext.Entities.Course>();
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Student Details</h2>
                <a href="@Url.Action("Index", "Student")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Student Information -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Student ID:</dt>
                        <dd class="col-sm-8">@Model.StudentId</dd>

                        <dt class="col-sm-4">Full Name:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8">@(Model.Username ?? "N/A")</dd>

                        <dt class="col-sm-4">Date of Birth:</dt>
                        <dd class="col-sm-8">@(Model.DateOfBirth?.ToString("yyyy-MM-dd") ?? "N/A")</dd>

                        <dt class="col-sm-4">Gender:</dt>
                        <dd class="col-sm-8">@(Model.Gender ?? "N/A")</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@(Model.Email ?? "N/A")</dd>

                        <dt class="col-sm-4">Phone:</dt>
                        <dd class="col-sm-8">@(Model.Phone ?? "N/A")</dd>

                        <dt class="col-sm-4">Address:</dt>
                        <dd class="col-sm-8">@(Model.Address ?? "N/A")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == "Active" ? "bg-success" : Model.Status == "Graduated" ? "bg-primary" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Academic Information -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-graduation-cap"></i> Academic Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Academic Program:</dt>
                        <dd class="col-sm-8">@(Model.AcademicProgram ?? "N/A")</dd>

                        <dt class="col-sm-4">Year:</dt>
                        <dd class="col-sm-8">@(Model.Year?.ToString() ?? "N/A")</dd>

                        <dt class="col-sm-4">GPA:</dt>
                        <dd class="col-sm-8">
                            @if (Model.GPA.HasValue)
                            {
                                <span class="badge bg-info">@Model.GPA.Value.ToString("F2")</span>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Enrollment Date:</dt>
                        <dd class="col-sm-8">@(Model.EnrollmentDate?.ToString("yyyy-MM-dd") ?? "N/A")</dd>
                    </dl>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="mt-3">
                            <a href="@Url.Action("Edit", "Student", new { id = Model.Id })" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit Student
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Enrolled Courses -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-book"></i> Enrolled Courses (@courses.Count())</h5>
                </div>
                <div class="card-body">
                    @if (courses.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Course Code</th>
                                        <th>Course Name</th>
                                        <th>Credits</th>
                                        <th>Department</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in courses)
                                    {
                                        <tr>
                                            <td>@course.CourseCode</td>
                                            <td>@course.CourseName</td>
                                            <td>@course.Credits</td>
                                            <td>@(course.Department ?? "N/A")</td>
                                            <td>
                                                <span class="badge @(course.Status == "Active" ? "bg-success" : "bg-secondary")">
                                                    @course.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> This student is not enrolled in any courses yet.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>










